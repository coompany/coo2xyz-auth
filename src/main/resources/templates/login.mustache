<div class="row">
    <div class="col-xs-12">
        <div class="jumbotron jumbotron-inverse">
            <form method="post" action="/login">
                <div class="form-group">
                    <label for="email_field">E-mail</label>
                    <input class="form-control" type="email" name="email_field" id="email_field" placeholder="your e-mail" />
                </div>
                <div class="form-group">
                    <label for="password_field">Password</label>
                    <input class="form-control" type="password" name="password_field" id="password_field" placeholder="your password" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <br />
                    <a href="/signup">Or signup</a>
                </div>
            </form>
        </div>
    </div>
</div>
